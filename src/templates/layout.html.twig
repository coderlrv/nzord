{% extends "backend.html.twig" %}

{% block body %}
<div class="wrapper">
	<header class="main-header">
	    {% include 'navigation.html.twig' %}
	</header>
  	<div class="content-wrapper">
		{% block contentWrapper %}
			<section class="content-header">
				{% include 'pagTitle.html.twig' with {page_title : block('page_title')} %}
			</section>
			<section class="content">
				<div class="col-xs-12 box box-skin">
					<div class="box-body">
						{% block content %}{% endblock %}
						{% block container %}{% endblock %}
					</div>
				</div>
			</section> <!-- /container -->
		{% endblock %}
	</div>
	<div id="kcfinder_div"></div>
	<footer class="main-footer">
		<div class="pull-right hidden-xs"> 
			<a class="btn btn-sm btn-xs btn-default"> <i class="fa fa-file-o" aria-hidden="true"></i> Notes </a>
			<a class="btn btn-sm btn-xs btn-default" onclick="fileManager()"> <i class="fa fa-th-list" aria-hidden="true"></i> File Manager </a>
			<b>Versão:</b> {{ sys.version }}
		</div>
		<small title="Dados da Sessão"> 
			 <span class="glyphicon glyphicon-user"> </span> 
			 <a href="{{ base_url() }}/app/system/suasessao" title="Informações da sessão">{{ session.app.login }}</a> 
			| <span class="glyphicon glyphicon-time"> </span> {{ session.app.loggedIn|date("d/m/Y H:i:s") }} 
			<!-- | <span id="log"></span>  -->
			| <b>Sessão: </b>{{ session.app.sessao }} - <span id="spanRegSes"><i class="fa fa-circle text-green"></i> Online</span>
		</small>
	</footer>
	<!-- Control Sidebar -->
  	<aside class="control-sidebar control-sidebar-dark"></aside>
	<div class="control-sidebar-bg"></div>
	<input type="hidden" id="urlBase" value="{{ base_url() }}">
	<input type="hidden" id="sesId" value="{{ session.app.sessao }}">
	<input type="hidden" id="urlPag" value="{{ base_url() }}/{{ currentUrl }}">
</div> <!-- ./wrapper -->
<div id="divModalBox" ></div>
{% endblock %} 

{% block bScripts %}
	<script src="{{ base_url() }}/assets/nzord-app/src/js/nzord-app.js"></script>

	<script src="{{ base_url() }}/assets/moment/min/moment.min.js"></script>
	<script src="{{ base_url() }}/assets/moment/locale/pt-br.js"></script> 
	
	{% block scripts %}{% endblock %}
{% endblock %} 
