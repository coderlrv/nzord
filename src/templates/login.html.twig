<!DOCTYPE html>
<html><head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=7; IE=9; IE=Edge"/>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ sys.descricao }}">
    <meta name="author" content="{{ sys.autor }}">
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
	<link rel="shortcut icon" type="image/x-icon" href="{{ base_url() }}/favicon.ico">

	<title>{{ sys.title}}</title>
	<!-- jQuery -->
	<script src="{{ base_url() }}/assets/jquery/dist/jquery.min.js"></script>
	<link href='{{ base_url() }}/css/index.css' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="{{ base_url() }}/assets/ionicons-min/css/ionicons.min.css">
		
        <!-- Bootstrap 3.3.6 -->
	<link href="{{ base_url() }}/assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="{{ base_url() }}/assets/fontawesome/css/font-awesome.min.css?afver=201" rel="stylesheet"/>
	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
	<![endif]-->

	<!-- CSS padrões NZord -->
	<link href="{{ base_url() }}/assets/nzord-app/src/css/nzord-app.css" rel="stylesheet">
	<link href="{{ base_url() }}/assets/nzord-app/src/css/nzord-essentials.css" rel="stylesheet">

	<!--  Arquivo js customizado  -->
	<link href="{{ base_url() }}/css/custom.css" rel="stylesheet">

		<!-- Google Font -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic"> 
	<style>
		body {
			margin: 0px;
			padding: 0px;
			background: url('{{ sys.config.image_idx }}') #3c8dbc;
			background-repeat: no-repeat;
			background-size: 100%;
		}
	</style>
</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="card card-container auth-component-form" style="margin-top: 5%;">
			{% for msg in flash('error')  %}
				<div class="alert alert-danger text-center">
					<h4><i class="glyphicon glyphicon-remove"></i> {{msg|raw}}</h4>
				</div>
			{% endfor %}

			{% for msg in flash('warning') %}
				<div class="alert alert-warning text-center">
					<h4><i class=" glyphicon glyphicon-warning-sign"></i> {{msg|raw}}</h4>
				</div>
			{% endfor %}

			{% for msg in flash('success') %}
				<div class="alert alert-success text-center">
					<h4><i class="glyphicon glyphicon-ok"></i> {{msg|raw}}</h4>
				</div>
			{% endfor %}
			
			<div class="col-md-12 text-center margin-top-10">
				<div class="login-logo">
					<img src="{{ base_url() }}/{{ sys.config.image_logo|raw }}" style="max-width: 70%;" alt="Logomarca"/>
				</div>
				<form name="login" class="form-signin" method="POST" action="{{ path_for('postLogin') }}" autocomplete="off">
					<div class="form-login text-left login-box-body">
						<div>{{ sys.config.title_idx|raw }}</div>
						<input type="text" name="username" placeholder="Login/Usuário" class="form-control username" maxlength="30" autofocus required="required" value="{{ login.usuario }}" /> 
						<input type="password" name="password" placeholder="Senha" class="form-control password" maxlength="20" required="required" />
					
						<span class="group-btn">
							<button type="submit" class="btn btn-primary btn-block">
								<i class="fa fa-sign-in"></i> Entrar
							</button>
						</span>
					</div>
				</form>
				<br />
			</div>

			{% if sys.config.login_msg is not empty %}
				<div class="col-md-12 text-justify bg-warning">
					<small>{{ sys.config.login_msg|raw }}</small>
				</div>
			{% endif %}
		</div>
	</div>
	<script>
		window.setTimeout(function() {
			$(".alert").fadeTo(2000, 0).slideUp(900, function(){
				$(this).remove(); 
			});
			$(".alert").fadeTo(2000, 0).slideUp(900, function(){
				$(this).remove(); 
			});
		}, 5000);
	</script>	
</body>
</html>